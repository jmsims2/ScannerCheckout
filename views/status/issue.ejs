<div class="container">
    <% if(flash && flash.err) { %>
    <ul class="alert alert-danger">
        <% Object.keys(flash.err).forEach(function(error) { %>
        <li><%- JSON.stringify(flash.err[error]) %></li>
        <% }) %>
    </ul>
    <% } %>
    <form action="/status/logIssue" method="post" class="form-inline text-center">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <div class="input-group input-group-lg input-hor-padding">
                        <input name="asset_tag" id="equipment-input" data-collection="status" data-collection-attribute="asset_tag" type="text" class="form-control input-padding" placeholder="Equipment">
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="">
                    <div class="input-group-lg input-hor-padding">
                        <textarea name="notes" id="textbox" class="form-control input-padding textarea-issue" placeholder="Issue"></textarea>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="form-group">
                    <div class="input-group input-group-lg input-hor-padding">
                        <button class="btn btn-xlarge btn-primary input-padding" type="submit">Submit</button>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </form>
</div>