<div class="container">
    <% if(flash && flash.err) { %>
    <ul class="alert alert-danger">
        <% Object.keys(flash.err).forEach(function(error) { %>
        <li><%- JSON.stringify(flash.err[error]) %></li>
        <% }) %>
    </ul>
    <% } %>
    <form action="/status/addStatus" method="post" class="form-inline text-center">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                        <div class="input-group input-group-lg input-hor-padding">
                            <h3><span id="employee-input-label" class="label label-danger hide-label">Not Found</span></h3>
                            <input name="checkout_emp_id" id="employee-input" data-collection="employee" data-collection-attribute="emp_id" type="text" class="form-control input-padding scan-app-input-fields" placeholder="Employee">
                            <input name="checkout_emp_name" id="employee-input-name" data-collection="employee" data-collection-attribute="emp_id" type="text" class="hidden" placeholder="Employee">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group input-group-lg input-hor-padding">
                            <h3><span id="equipment-input-1-label" class="label label-danger hide-label">Checked-Out</span></h3>
                            <input name="asset_tag_1" id="equipment-input-1" type="text" data-collection="equipment" data-collection-attribute="asset_tag" class="form-control input-padding scan-app-input-fields" placeholder="Equipment">
                            <input name="asset_name_1" id="equipment-input-1-name" type="text" data-collection="equipment" data-collection-attribute="asset_tag" class="hidden" placeholder="Equipment">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group input-group-lg input-hor-padding">
                            <h3><span id="equipment-input-2-label" class="label label-danger hide-label">Checked-Out</span></h3>
                            <input name="asset_tag_2" id="equipment-input-2" type="text" data-collection="equipment" data-collection-attribute="asset_tag" class="form-control input-padding scan-app-input-fields" placeholder="Equipment">
                            <input name="asset_name_2" id="equipment-input-2-name" type="text" data-collection="equipment" data-collection-attribute="asset_tag" class="hidden" placeholder="Equipment">
                        </div>
                    </div>
            </div>
        </div>
        <div id="form-submit-button-div" class="row">
            <div class="col-md-4 col-md-offset-4">
                <button id='form-submit-button' type="submit" class="btn btn-primary btn-block btn-xlarge btn-padding">Submit</button>
            </div>
        </div>
    </form>
        <div class="row">
            <div class="col-md-12">
                <h3>Checked Out Equipment</h3>
                <table class="table table-striped sortable">
                    <thead>
                    <tr>
                        <th>Employee</th>
                        <th>Equipment</th>
                        <th>Checkout Time</th>
                        <th>Status</th>
                    </tr>
                    </thead>
                    <tbody>
                        <% _.each(status, function(status) { %>
                        <tr data-id="<%= status.id %>" data-model="status" %>
                            <td><%= status.checkout_emp_name %> </td>
                            <td><%= status.asset_name %> </td>
                            <td><%= new Date(status.checkout_time).toLocaleTimeString() %></td>
                            <td><%= status.asset_status %></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>